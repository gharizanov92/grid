<!DOCTYPE html>
<html ng-app="app">
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap/bootstrap.min.css' />
    <!-- <link rel='stylesheet' href='/stylesheets/bootstrap/bootstrap.css.map' /> -->
    <!-- <link rel='stylesheet' href='/stylesheets/bootstrap/bootstrap-theme.min.css' /> -->
</head>
    <body ng-controller = "controller" style="width:1200px">
        <div clas="container">
            <span class="glyphicon glyphicon-search"></span>

            <grid url="/books" on-data-requested="fetchData" width="100%" height="600px" selected="selected">
                <column header="Title" binding="bookTitle" width="450px"></column>
                <column header="Published" binding="datePublished" width="100px"></column>
                <column header="Publisher" binding="publisher">{{row.publisher.name}}</column>
                <column header="Author" binding="authors">{{row.authors[0].name}}</column>
                <column header="Edit" binding="id" >
                    <a href="#" style="display:block; padding-top:4px; color: #428bca" ng-click="update(row._id)">
                        <span class="glyphicon glyphicon-pencil"></span> Edit
                    </a>
                </column>
                <column header="Delete" binding="id"  click="test()">
                    <a href="#" style="display:block; padding-top:4px; padding-left: 10px; color: #d9534f">
                        <span class="glyphicon glyphicon-remove-circle"></span> Delete
                    </a>
                </column>
            </grid>
            <label for="selection">Selected row</label>
            <div id = "selection" class="well">
                <div ng-repeat="(key, value) in getSelected()">
                    <label>{{key}}</label>
                    <pre>{{value}}</pre>
                </div>
            </div>

            <script src="/javascripts/angular.min.js"></script>
            <script src="/javascripts/app.js"></script>
            <script src="/javascripts/grid.js"></script>
            <script src="/javascripts/ui-bootstrap-tpls-0.11.2.min.js"></script>
        </div>
    </body>
</html>
